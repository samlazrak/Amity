{
  "name": "amity",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:jsburgin/amity.git",
  "author": "Joshua Burgin <jburgin@creaturebuilds.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist",
    "postinstall": "yarn build",
    "build": "./node_modules/.bin/parcel build client/index.html",
    "watch:backend": "./node_modules/.bin/nodemon --watch 'backend/**/*' -e ts,tsx,graphql --exec 'ts-node' ./backend/index.ts",
    "watch:client": "./node_modules/.bin/parcel watch client/index.html",
    "watch": "./node_modules/.bin/concurrently -p [{name}] --names \"BACKEND,CLIENT\" -c \"bgBlue.bold,bgCyan.bold\" \"yarn watch:backend\" \"yarn watch:client\"",
    "start": "./node_modules/.bin/ts-node ./backend/index.ts",
    "test": "./node_modules/.bin/jest"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.4",
    "@fortawesome/free-solid-svg-icons": "^5.3.1",
    "@fortawesome/pro-light-svg-icons": "^5.4.2",
    "@fortawesome/pro-regular-svg-icons": "^5.4.2",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "@sendgrid/mail": "^6.3.1",
    "@sentry/node": "4.4.1",
    "@types/body-parser": "^1.17.0",
    "@types/bookshelf": "^0.9.9",
    "@types/config": "^0.0.34",
    "@types/express": "^4.16.0",
    "@types/handlebars": "^4.0.39",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^23.3.10",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.118",
    "@types/ms": "^0.7.30",
    "@types/passport": "^0.4.7",
    "@types/passport-saml": "^0.15.9",
    "@types/pg": "^7.4.11",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/react-redux": "^6.0.10",
    "@types/react-router-dom": "^4.3.1",
    "@types/redis": "^2.8.8",
    "@types/validator": "^9.4.3",
    "apollo-boost": "0.1.22",
    "apollo-client": "2.4.7",
    "apollo-link-state": "^0.4.2",
    "apollo-server-express": "^2.0.6",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.3",
    "bookshelf": "^0.13.3",
    "bookshelf-camelcase": "^2.0.1",
    "bookshelf-cascade-delete": "^2.0.1",
    "bookshelf-secure-password": "^3.1.0",
    "bookshelf-uuid": "^1.0.0",
    "chart.js": "^2.7.3",
    "concurrently": "^4.0.1",
    "config": "2.0.1",
    "dateformat": "^3.0.3",
    "express": "^4.16.3",
    "graphql": "^14.0.2",
    "graphql-playground-middleware-express": "^1.7.3",
    "handlebars": "^4.0.12",
    "helmet": "^3.13.0",
    "jest": "^23.6.0",
    "jest-express": "^1.6.1",
    "jsonwebtoken": "8.4.0",
    "knex": "^0.15.2",
    "lodash": "^4.17.10",
    "ms": "^2.1.1",
    "numeral": "^2.0.6",
    "parcel": "^1.9.7",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "passport": "^0.4.0",
    "passport-saml": "1.0.0",
    "pg": "^7.5.0",
    "react": "16.6.3",
    "react-animated-number": "^0.4.4",
    "react-apollo": "2.3.2",
    "react-chartjs-2": "^2.7.4",
    "react-dom": "16.6.3",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redis": "^2.8.0",
    "styled-components": "^4.1.2",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "validator": "^10.8.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-pro": "^5.4.2",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "sass": "^1.16.1"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": false,
    "coveragePathIgnorePatterns": [
      "/node_modules",
      "<rootDir>/build/"
    ],
    "coverageReporters": [
      "text"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}"
    ]
  }
}
